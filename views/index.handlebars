
<header><h1>VIRTUAL RESTAURANT</h1></header>

<main>
  
  <div class="order">
    <h2>Enter Order Here</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="new-order">Order Name:</label>
        <input type="text" id="new-order" name="order-name">
      </div>
      <button type="submit">SUBMIT ORDER</button>
    </form>
  </div>

  <div class="display">

    <div>
      <h2>Your Order is Ready!</h2>
      <ul>
        {{#each orders}}
          {{#unless devoured}}
            {{> orders/order-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div>
      <h2>Thank You, Come Again!</h2>

      <ul>
        {{#each orders}}
          {{#if paid}}
            <li class="paid">
              <h4>
                {{order_name}}
              </h4>
              <button data-id="{{id}}" disabled>
                PAID
              </button>
            </li>
            {{else if devoured}}
              {{> orders/paid-order-block paid=true}}
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

</main>

<footer>
  <p>VIRTUAL RESTAURANT</p>
</footer>


